{
	"name": "ttracker",
	"private": true,
	"type": "module",
	"scripts": {
		"docker:start": "ts-node scripts/check-docker.ts && docker-compose up -d",
		"docker:stop": "docker-compose down",
		"dev": "npm run docker:start && turbo dev",
		"dev:desktop": "turbo run dev --filter=desktop",
		"dev:docs": "turbo run dev --filter=docs",
		"dev:server": "npm run docker:start && turbo run dev --filter=server",
		"dev:web": "turbo run dev --filter=web",
		"build": "turbo build",
		"lint": "turbo lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"devDependencies": {
		"prettier": "^3.5.0",
		"turbo": "^2.4.2",
		"typescript": "5.7.3"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.9.2",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"@types/react": "^19.0.8",
		"react": "^19.0.0",
		"react-dom": "^19.0.0"
	}
}
